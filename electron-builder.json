{
  "productName": "GAppium",
  "appId": "io.gappium",
  "asar": true,
  "directories": {
    "output": "release"
  },
  "files": ["dist/"],
  "artifactName": "${productName}-${os}-${arch}.${ext}",
  "fileAssociations": [
    {
      "ext": "appiumsession",
      "name": "Appium Session",
      "role": "Editor"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "win": {
    "target": ["portable"]
  },
  "nsis": {
    "oneClick": false
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Development"
  },
  "publish": {
    "provider": "github",
    "owner": "appium",
    "vPrefixedTagName": true
  }
}
